
module Smten.Tests.State where

import Control.Monad.State
import Control.Monad.State.Class
import Smten.Tests.Test

statething :: Integer -> State Integer Integer
statething x = do
    s <- get
    put (s+x)
    return (s*x)

teststate :: IO ()
teststate = do
    test "State" (runState (statething 2) 3 == (6, 5))

