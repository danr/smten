
module Seri.SMT.Tests.AllQ where

import Prelude
import Seri.SMT.Symbolic

-- Find a list of all values satisfing the given predicate.
allQ :: (Eq a, Free a) => (a -> Bool) -> SMT [a]
allQ p = do
  r <- query $ do
      x <- free
      assert (p x)
      return x
  case r of
     Satisfiable v -> do
        vs <- allQ (\a -> (p a) && (a /= v))
        return (v:vs)
     _ -> return []

pred1 :: Integer -> Bool
pred1 x = (x > 3) && (x < 8)

pred2 :: Integer -> Bool
pred2 x = False

qmain :: SMT [Integer]
qmain = allQ pred1

main :: IO ()
main = do
    putStr "yices1..."
    r1 <- runSMT Yices1 (Just "build/test/AllQ.yices1.dbg") qmain
    putStrLn (show r1)

    putStr "yices2..."
    r2 <- runSMT Yices2 (Just "build/test/AllQ.yices2.dbg") qmain
    putStrLn (show r2)
